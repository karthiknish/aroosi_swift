rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can only upload to their own folder
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat images - only conversation participants can access
    match /chat_images/{conversationId}/{allPaths=**} {
      allow read, write: if isConversationParticipant(conversationId);
    }
    
    // Voice messages - only conversation participants can access
    match /voice_messages/{conversationId}/{allPaths=**} {
      allow read, write: if isConversationParticipant(conversationId);
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

function isConversationParticipant(conversationId) {
  return request.auth != null &&
    firestore.exists(/databases/(default)/documents/conversations/$(conversationId)) &&
    request.auth.uid in firestore.get(/databases/(default)/documents/conversations/$(conversationId)).data.participants;
}
