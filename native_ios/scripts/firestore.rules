rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /icebreaker_questions/{documentId} {
      allow read: request.auth != null;
      allow write: request.auth != null && resource.data.active == true;
    }
    match /icebreaker_answers/{documentId} {
      allow read: request.auth != null && request.auth.uid == resource.data.userId;
      allow write: request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}